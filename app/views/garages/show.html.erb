<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3 class="h3new"> <%= current_user == @garage.user ? "My garage details" : "Book this garage" %></h3>
        <%= simple_form_for @garage do |f| %>
          <%= f.input :city %>
          <%= f.input :street %>
          <%= f.input :description %>
          <%= f.input :price %>



      <% if current_user == @garage.user %>
        <center><%= link_to "Delete", garage_path(@garage), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-flat' %>
          <%= link_to "Edit", edit_garage_path(@garage), class: 'btn btn-flat' %></center>

      <% else %>
          <%= link_to "Book", new_garage_booking_path(@garage), class: 'btn btn-flat' %>
    <% end %>
  <% end %>

      </div>
    </div>
  </div>
