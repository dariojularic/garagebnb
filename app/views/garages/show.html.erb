    <div class="container py-5">
      <div class="row">
        <div class="col-12 col-md-6 offset-lg-3">
          <div class="bg-white rounded p-4 shadow">
            <center><h3 class="h3new"> <%= current_user == @garage.user ? "My garage details" : "Book this garage" %></h3></center>
            <hr>
            <h5><strong>City</strong></h5>
