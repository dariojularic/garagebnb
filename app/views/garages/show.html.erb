              <center><%= link_to "Delete", garage_path(@garage), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-flat btn-lg' %>
              <%= link_to "Edit", edit_garage_path(@garage), class: 'btn btn-flat btn-lg' %></center>
            <% elsif current_user %>
              <center><%= link_to "Book", new_garage_booking_path(@garage), class: 'btn btn-flat btn-lg' %></center>
            <% end %>
          </div>
        </div>
      </div>
