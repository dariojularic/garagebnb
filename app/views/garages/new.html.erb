<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new Garage for hosting</h3>
        <%= simple_form_for @garage do |f| %>
          <%= f.input :location %>
          <%= f.input :description %>
          <%= f.input :price %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
